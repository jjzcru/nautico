{
  "name": "nautico",
  "version": "0.1.0",
  "description": "Cloudflare Pages Fullstack Setup With Hono Backend",
  "author": "Jose J. Cruz",
  "type": "module",
  "keywords": [
    "cloudflare",
    "pages",
    "hono"
  ],
  "engines": {
    "node": ">=20.12.0"
  },
  "imports": {
    "#backend/*": "./backend/*"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "deploy:wrangler": "npm run build && wrangler pages deploy ./dist",
    "preview:wrangler": "npm run build && wrangler pages dev ./dist",
    "lint": "eslint . --ext js,jsx,ts,tsx --report-unused-disable-directives --max-warnings 0",
    "generate-types": "wrangler types",
    "type-check": "npm run generate-types && tsc"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.1.2",
    "@tailwindcss/vite": "^4.0.15",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "graphql": "^16.10.0",
    "graphql-yoga": "^5.13.2",
    "hono": "^4.4.0",
    "lucide-react": "^0.483.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^6.10.0",
    "tailwind-merge": "^3.0.2",
    "tailwindcss": "^4.0.15",
    "tw-animate-css": "^1.2.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250320.0",
    "@eslint/js": "^9.21.0",
    "@types/node": "^22.13.11",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0",
    "wrangler": "^4.4.0"
  }
}
